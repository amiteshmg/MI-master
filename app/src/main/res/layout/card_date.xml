<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/card_date_layout"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/question_date_tv"
        android:text="@string/demo_question_text"
        android:layout_weight="1"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="date"
        android:id="@+id/date_edit_text"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginStart="@dimen/card_left_margin"
        android:autofillHints="dd/mm/yyyy" />



</LinearLayout>
